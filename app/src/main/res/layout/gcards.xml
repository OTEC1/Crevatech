<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/inputlines5"
        android:layout_marginTop="20dp"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/inputlines6"
            android:drawableStart="@drawable/ic_baseline_bubble"
            android:paddingStart="8dp" />


        <RelativeLayout
            android:id="@+id/cardsHold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cards"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardsHold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp">


            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:textColor="@color/dark_text"
                android:drawableStart="@drawable/ic_baseline_games"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/liquidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/groupName"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_baseline_account"
                android:textColor="@color/purple_700"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/liquidity"
                android:layout_marginTop="12dp"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_baseline_show"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:textStyle="bold" />




            <TextView
                android:id="@+id/miner_stake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profit"
                android:layout_marginTop="12dp"
                android:textAlignment="textStart"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:drawableStart="@drawable/ic_baseline_flag_24"
                android:textStyle="bold" />




        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardsHold"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/inputlines6"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_near_me_24" />


    </RelativeLayout>

</RelativeLayout>